{
	"name": "gobo-eiffel",
	"displayName": "Gobo Eiffel",
	"description": "Eiffel language support using Gobo Eiffel",
	"version": "1.0.0",
	"publisher": "gobosoft",
	"author": {
		"name": "Eric Bezault",
		"email": "ericb@gobosoft.com",
		"url": "https://www.gobosoft.com"
	},
	"icon": "images/gobo.png", 
	"engines": {
		"vscode": "^1.104.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onDebug:eiffel",
		"onDebugInitialConfigurations",
		"onDebugResolve:eiffel"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "eiffel",
				"aliases": [
					"Eiffel",
					"e"
				],
				"extensions": [
					".e"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "eiffel",
				"scopeName": "source.eiffel",
				"path": "./syntaxes/eiffel.tmLanguage.json"
			}
		],
		"configuration": {
			"description": "Gobo Eiffel Settings",
			"properties": {
				"gobo-eiffel.goboEiffelPath": {
					"type": "string",
					"description": "Path to Gobo Eiffel installation",
					"default": ""
				},
				"gobo-eiffel.automaticUpdateCheck": {
					"type": "boolean",
					"description": "Automatically checks for new Gobo Eiffel releases",
					"default": true
				}
			}
		},
		"commands": [
			{
				"command": "gobo-eiffel.compileAndRunEiffelFile",
				"title": "Compile & Run Eiffel File",
				"category": "Gobo Eiffel"
			},
			{
				"command": "gobo-eiffel.compileEiffelFile",
				"title": "Compile Eiffel File",
				"category": "Gobo Eiffel"
			},
			{
				"command": "gobo-eiffel.runEiffelFile",
				"title": "Run Eiffel File",
				"category": "Gobo Eiffel"
			},
			{
				"command": "gobo-eiffel.compileAndRunWithEcfFile",
				"title": "Compile & Run With ECF File",
				"category": "Gobo Eiffel"
			},
			{
				"command": "gobo-eiffel.compileWithEcfFile",
				"title": "Compile With ECF File",
				"category": "Gobo Eiffel"
			},
			{
				"command": "gobo-eiffel.runWithEcfFile",
				"title": "Run With ECF File",
				"category": "Gobo Eiffel"
			}
		],
