				"configurationAttributes": {
					"launch": {
						"properties": {
							"ecfFile": {
								"type": "string",
								"description": "ECF file used for the compilation (default: current file)",
								"default": "${file}"
							},
							"ecfTarget": {
								"type": "string",
								"description": "Target in ECF file (default: last target in ECF file)",
								"default": ""
							},
							"compilationOptions": {
								"type": "array",
								"items": {
									"type": "string"
								},
								"description": "Command-line options to be passed to the Eiffel compiler",
								"default": []
							},
							"buildDir": {
								"type": "string",
								"description": "Where to compile the executable (default: folder of ECF file)",
								"default": ""
							},
							"args": {
								"type": "array",
								"items": {
									"type": "string"
								},
								"description": "Arguments to be passed to the executable",
								"default": []
							},
							"workingDir": {
								"type": "string",
								"description": "Where to run the executable (default: folder of ECF file)",
								"default": ""
							},
							"environmentVariables": {
								"type": "object",
								"additionalProperties": {
									"type": "string"
								},
								"description": "Environment variables for the compilation and the execution",
								"default": {}
							},
							"compileOnly": {
								"type": "boolean",
								"description": "Do not run the executable",
								"default": false
							},
							"runOnly": {
								"type": "boolean",
								"description": "Do not compile",
								"default": false
							}
						}
					}
				}
			}
